        {
            consultingServices.map((service) => (
                <section class="bg-subtle-dark-overlay-lvl-2 rounded-lg mb-8 p-8 shadow-lg">
                    <h1 class="text-2xl text-custom-offwhite font-bold leading-none">
                        {service.title}
                    </h1>
                    {service.sessions.map((session) => (
                        <article class="border-t-2 border-gray-800 pt-4 mt-4">
                            <h2 class="text-xl text-custom-offwhite font-semibold">
