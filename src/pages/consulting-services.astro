---
import Layout from "../layouts/Layout.astro";

const consultingServices = [
	{
		id: "resume-linkedin-review",
		title: "Resume and LinkedIn Profile Review",
		sessions: [
			{
				id: 1,
				name: "30-Minute Screencast Review",
				description:
					"Get a comprehensive 30-minute screencast review of your resume and LinkedIn profile, offering personalized feedback and actionable insights to enhance your professional branding.",
				features: [
					"Detailed analysis of your resume and LinkedIn profile",
					"Personalized recommendations aligned with your career goals",
					"Industry-specific advice and best practices",
					"ATS (Applicant Tracking System) optimization tips",
					"Strategies to increase profile visibility and engagement",
					"Two follow-up messages for additional questions and guidance",
				],
				price: "$50 USD",
				bookingProcess: [
					"Make payment to confirm your booking.",
					"Submit your current resume and LinkedIn profile URL.",
					"Receive your personalized screencast review within 3 business days.",
					"Engage in two follow-up messages for further assistance.",
				],
				buyButtonId: "buy_btn_1Q1a1DGDKR2aVHG29RzE4gaS",
			},
		],
	},
	{
		id: "career-planning-session",
		title: "Career Planning Session",
		sessions: [
			{
				id: 2,
				name: "60-Minute Video Call with Follow-Up Action Items",
				description:
					"A 60-minute video call where we will craft a personalized career plan tailored to your goals. Or ask me whatever you want!",
				features: [
					"Comprehensive 60-minute one-on-one video call",
					"Personalized career planning and goal setting",
					"Discussion on career transitions, skill development, and opportunities",
					"Expert advice tailored to your industry and experience level",
					"Follow-up email with actionable items and resources",
				],
				price: "$100 USD",
				bookingProcess: [
					"Make payment to confirm your booking.",
					"Schedule your 60-minute career planning session at a convenient time.",
					"Participate in the video call and discuss your career aspirations.",
					"Receive a follow-up email with action items and resources within 2 business days.",
				],
				buyButtonId: "buy_btn_1Q42luGDKR2aVHG2I13X7tVl",
			},
		],
	},
	{
		id: "mock-technical-interview",
		title: "Mock Technical Interview Session",
		sessions: [
			{
				id: 3,
				name: "30-Minute Mock Interview with Detailed Feedback",
				description:
					"Prepare for your next technical interview with a 30-minute mock session and receive a detailed feedback email to help you improve and succeed.",
				features: [
					"Simulated technical interview tailored to your target role",
					"Real-time problem-solving and coding challenges",
					"Immediate verbal feedback during the session",
					"Detailed feedback email highlighting strengths and areas for improvement",
					"Tips and strategies for acing technical interviews",
				],
				price: "$50 USD",
				bookingProcess: [
					"Make payment to confirm your booking.",
					"Schedule your mock interview at a convenient time.",
					"Participate in the 30-minute mock technical interview.",
					"Receive a detailed feedback email within 2 business days.",
				],
				buyButtonId: "buy_btn_1Q42oaGDKR2aVHG2arbSZ34v",
			},
		],
	},
];
---

<script src="/src/scripts/stripeBuyButton"></script>

<Layout
  title="Consulting Services"
  description="Enhance your career with our personalized consulting services."
>
  <div class="max-w-4xl mx-auto">
    <!-- Optional: Table of Contents -->
    <div class="mb-8">
      <h2 class="text-xl text-custom-offwhite font-semibold">My Services:</h2>
      <ul class="list-disc pl-5 text-custom-gray">
        {consultingServices.map((service) => (
          <li>
            <a href={`#${service.id}`} class="text-blue-500 underline">
              {service.title}
            </a>
          </li>
        ))}
      </ul>
    </div>

    {consultingServices.map((service) => (
      <section
        id={service.id}
        class="bg-subtle-dark-overlay-lvl-2 rounded-lg mb-8 p-8 shadow-lg"
      >
        <h1 class="text-2xl text-custom-offwhite font-bold leading-none">
          {service.title}
        </h1>
        {service.sessions.map((session) => (
          <article class="border-t-2 border-gray-800 pt-4 mt-4">
            <h2 class="text-xl text-custom-offwhite font-semibold">
              {session.name}
            </h2>
            <p class="text-custom-gray">{session.description}</p>
            <h3 class="text-lg text-custom-offwhite font-semibold mt-4">
              Features:
            </h3>
            <ul class="list-disc pl-5 text-custom-gray">
              {session.features.map((feature) => (
                <li>{feature}</li>
              ))}
            </ul>
            <p class="text-custom-gray mb-1 mt-4">
              <strong class="text-custom-offwhite">Price:</strong> {session.price}
            </p>
            <h3 class="text-lg text-custom-offwhite font-semibold mt-4">
              Booking Process:
            </h3>
            <ol class="list-decimal pl-5 text-custom-gray">
              {session.bookingProcess.map((step) => (
                <li>{step}</li>
              ))}
            </ol>
            <div class="stripe-buy-button-container flex justify-center mt-5">
              <stripe-buy-button
                buy-button-id={session.buyButtonId}
                publishable-key="pk_live_51OVYNtGDKR2aVHG2rkLNhuMQNijVcyxE3V4qsf92piHHYSmeE2SZg9L2HmuCwCMhJyAPZuNAAQhVUXDw5aqa7Edv00nPyo5KFq"
              ></stripe-buy-button>
            </div>
          </article>
        ))}
      </section>
    ))}
  </div>
</Layout>
